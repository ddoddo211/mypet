<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop">
	
	<!-- 펫쇼핑몰 이벤트List 조회 -->
	<select id="shopNoticeList" resultType="snotVo">
		select * from shopnotice
	</select>
	
	<!-- 펫쇼핑몰 이벤트글 조회 -->
	<select id="shopNoticeDetail" parameterType="String" resultType="snotVo">
		select * from shopnotice
		where snot_id = #{snot_id}
	</select>
	
	<!-- 펫쇼핑몰 동물 메뉴 -->
	<select id="animalMenu" resultType="aniVo">
		select * from animal
	</select>
	
	<!-- 펫쇼핑몰 강이지/고양이 상품메뉴 -->
	<select id="prodMenu" resultType="pddVo" parameterType="String">
		SELECT * FROM PRODDV
		WHERE PDD_AM = #{pdd_am}
	</select>
	
	<!-- 펫쇼핑 상품메뉴에 대한 상품List -->
	<select id="prodList" parameterType="String" resultType="prodVo">
		select b.* from bdetail c,prod b
		where bd_id = prod_bd
		and bd_proddv = #{pdd_id}
	</select>
	
	<!-- 상품메뉴에서 옵션분류List -->
	<select id="optionList" parameterType="String" resultType="ageVo">
		select * from prodage
		where page_am = #{pdd_am}
	</select>
	
	<!-- 해당 상품메뉴에 해당하는 브랜드List -->
	<select id="brandList" parameterType="String" resultType="brdVo">
		select b.* from bdetail a,brand b
		where brd_id = bd_brand
		and bd_proddv = #{pdd_id}
	</select>
	
	<!-- 상품의 상세정보 -->
	<select id="prodDetail" parameterType="String" resultType="prodVo">
		select * from prod
		where prod_id = #{prod_id}
	</select>
</mapper>
 